<div class="indexbody" >
	<div class="slideDown">
		<h1 class="pulse"><i><u>New Bumbles!</i></u></h1>
		<div class="perPost">
			<% @posts.each do |x| %>
			<p><%= 'Title: ' + x.title %><br>
				<%= 'By: ' + x.user.name %>
			<br><br>
			<%= 'Bumble: ' +  x.body %></p>
			<% if x.comments.present? %>
				<h3>Comments</h3>
				<ul>
					<% x.comments.each do |y| %>
					<li><%=  y.body %></li>
					<% end %>
				</ul>
			<% end %>
			<% end %>
		</div>
	</div>

</div>